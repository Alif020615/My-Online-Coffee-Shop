<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/brown">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- Cart Items Section -->

        <!-- Payment Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PAYMENT"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="#282222"
            android:elevation="4dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Payment Amount Section -->
        <!-- Default amount placeholder -->

        <!-- Visa and MasterCard Logos (Side by Side) -->

        <!-- Payment Details (Card Info) -->

        <TextView
            android:id="@+id/totalPriceText"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="Total Amount: RM 0.00"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Visa Logo -->
            <ImageView
                android:layout_width="101dp"
                android:layout_height="174dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Visa Logo"
                android:src="@drawable/visa" /> <!-- Add margin between logos -->

            <!-- MasterCard Logo -->
            <ImageView
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:contentDescription="MasterCard Logo"
                android:src="@drawable/mastercard" />
        </LinearLayout>

        <EditText
            android:id="@+id/cardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name on Card"
            android:padding="12dp"
            android:textColor="#333333"
            android:textColorHint="#9E9E9E"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/cardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card Number"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="#333333"
            android:textColorHint="#9E9E9E"
            android:layout_marginBottom="8dp" />

        <!-- Expiry Date and Security Code -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/expiryDate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="MM/YY"
                android:inputType="datetime"
                android:padding="12dp"
                android:textColor="#333333"
                android:textColorHint="#9E9E9E"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/securityCode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Security Code"
                android:inputType="numberPassword"
                android:padding="12dp"
                android:textColor="#333333"
                android:textColorHint="#9E9E9E" />
        </LinearLayout>

        <!-- Postal Code Field -->
        <EditText
            android:id="@+id/postalCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Postal Code"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="#333333"
            android:textColorHint="#9E9E9E"
            android:layout_marginBottom="8dp" />

        <!-- Pay Button -->
        <Button
            android:id="@+id/payButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#5C6BC0"
            android:text="Pay"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:padding="12dp"
            android:layout_marginTop="10dp" />

        <!-- Cash Payment Button -->
        <Button
            android:id="@+id/CashButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#26A69A"
            android:text="Pay with Cash"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:padding="12dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</ScrollView>
